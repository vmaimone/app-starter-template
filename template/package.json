{
  "name": "my-project",
  "description": "a hapi / vue project",
  "author": "vin maimone",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "start": "cross-env NODE_ENV=production node app.js",
    "build": "cross-env NODE_ENV=production webpack --progress --hide-modules --config config/production.webpack.config.js",
    "analysis": "cross-env NODE_ENV=production webpack --profile --json --config config/production.webpack.config.js > stats.json",
    "copy:static": "mkdirp ./public/static && ncp ./client/static ./public/static",
    "copy:fa-fonts": "mkdirp ./public/node_modules/font-awesome/fonts && ncp ./node_modules/font-awesome/fonts ./public/node_modules/font-awesome/fonts",
    "copy:fa-css": "mkdirp ./public/node_modules/font-awesome/css && ncp ./node_modules/font-awesome/css/font-awesome.min.css ./public/node_modules/font-awesome/css/font-awesome.min.css"
  },
  "dependencies": {
    "@kleinsteel/auth": "latest",
    "@kleinsteel/db": "latest",
    "@kleinsteel/reverse-dns": "^0.0.3",
    "babel-runtime": "latest",
    "bulma": "^0.4.1",
    "cross-env": "^3.1.3",
    "hapi": "^16.1.0",
    "inert": "^4.0.0",
    "vue": "^2.3.1",
    "vue-router": "^2.3.1",
    "vuex": "^2.3.1",
    "whatwg-fetch": "^2.0.1"
  },
  "devDependencies": {
    "babel-core": "latest",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-stage-3": "latest",
    "chai": "^3.5.0",
    "css-loader": "^0.26.0",
    "eslint-plugin-es-beautifier": "^1.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "font-awesome": "^4.7.0",
    "function-bind": "^1.1.0",
    "hapi-webpack-dev-middleware": "~1.0.1",
    "hapi-webpack-hot-middleware": "~1.0.2",
    "html-webpack-plugin": "^2.21.0",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.10.0",
    "sass-loader": "^4.0.2",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^2.0.6",
    "vue-html-loader": "^1.2.2",
    "vue-loader": "^10.0.0",

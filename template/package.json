{
  "name": "{{ name }}",
  "version": "0.0.0",
  "description": "{{ description }}",
  "author": "{{ author }}",
  "private": true,
  "scripts": {
    "dev": "nodemon app.js",
    "start": "cross-env NODE_ENV=production node app.js",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --progress --hide-modules --config config/webpack.production.config.js && npm run copy",
    "clean": "rimraf public",
    "analysis": "cross-env NODE_ENV=production webpack --profile --json --config config/webpack.production.config.js > stats.json",
    "copy": "npm run copy:fa-fonts && npm run copy:fa-css",
    "copy:fa-fonts": "mkdirp ./public/node_modules/font-awesome/fonts && ncp ./node_modules/font-awesome/fonts ./public/node_modules/font-awesome/fonts",
    "copy:fa-css": "mkdirp ./public/node_modules/font-awesome/css && ncp ./node_modules/font-awesome/css/font-awesome.min.css ./public/node_modules/font-awesome/css/font-awesome.min.css"
  },
  "dependencies": {
    "@kleinsteel/auth": "latest",
    "@kleinsteel/db": "latest",
    "@kleinsteel/reverse-dns": "^0.0.3",
    "bulma": "^0.5.0",
    "cross-env": "^3.1.3",
    "hapi": "16.4.0",
    "inert": "^4.0.0",
    "vue": "^2.4.2",
    "vue-router": "^2.7.0",
    "vuex": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "latest",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.1",
    "babili-webpack-plugin": "^0.1.2",
    "chai": "^3.5.0",
    "css-loader": "^0.26.0",
    "eslint-plugin-es-beautifier": "^1.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "extract-text-webpack-plugin": "^2.0.0",
    "file-loader": "^0.11.1",
    "font-awesome": "^4.7.0",
    "hapi-webpack-dev-middleware": "^2.0.0",
    "hapi-webpack-hot-middleware": "^2.0.0",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.10.0",
    "rimraf": "^2.6.0",
    "sass-loader": "^4.0.2",
    "url-loader": "^0.5.8",
    "vue-loader": "^13.0.0",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^2.6.1",
    "webpack-merge": "^4.1.0"
  }
}
